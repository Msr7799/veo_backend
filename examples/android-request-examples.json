  "supported_modes": {
    "request": {
      "method": "GET",
      "url": "/v1/video/modes",
      "headers": {
        "Authorization": "Bearer <FIREBASE_ID_TOKEN>"
      }
    },
    "response": {
      "success": true,
      "data": {
        "supportedModes": ["TEXT_TO_VIDEO", "IMAGE_TO_VIDEO"],
        "parameters": {
          "durationSeconds": {
            "allowed": [4, 6, 8],
            "default": 5
          },
          "aspectRatio": {
            "allowed": ["16:9", "9:16", "1:1"],
            "default": "16:9"
          },
          "fps": {
            "allowed": [24, 30],
            "default": 24
          },
          "cameraStyle": {
            "allowed": ["cinematic", "handheld", "documentary"]
          },
          "motionLevel": {
            "allowed": ["low", "medium", "high"]
          },
          "lighting": {
            "allowed": ["natural", "dramatic", "soft"]
          },
          "quality": {
            "allowed": ["standard", "high"],
            "default": "standard"
          }
        }
      }
    }
  },

