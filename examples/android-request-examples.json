  "android_workflow": {
    "_description": "Complete workflow for Android app",
    "steps": [
      "1. User signs in with Google via Firebase Auth in Android app",
      "2. Get Firebase ID Token: FirebaseAuth.getInstance().currentUser?.getIdToken(false)",
      "3. Send video generation request with token in Authorization header",
      "4. Receive jobId, poll /v1/video/status/:jobId until COMPLETED",
      "5. Download video from signedUrl (expires in 1 hour)",
      "6. Upload video to your storage (Cloudinary/Firebase Storage)",
      "7. Save final URL to Firestore for user's gallery"
    ]
  }
